<!-- TÍTULO CONTEÚDO-->
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Clientes</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Novo cliente</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- TÍTULO CONTEÚDO-->
<!--CONTEÚDO-->
<div class="content mt-3">
    <form action="/Cliente/Adiciona" method="post" id="FormDadosPessoa" class="">
        <div class="row">
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header">Etapa 1: Dados Pessoais</div>
                    <div class="card-body card-block">
                        <div class="row text-center">
                            <div class="col">
                                <div class="btn-group btn-group-sm btn-group-toggle mb-2" data-toggle="buttons">
                                    <label class="btn btn-secondary rounded-left text-center active">
                                        <input type="radio" name="radioPessoaFisica" id="radioPessoaFisica" checked> Pessoa física
                                    </label>
                                    <label class="btn btn-secondary rounded-right">
                                        <input type="radio" name="radioPessoaJuridica" id="radioPessoaJuridica"> Pessoa jurídica
                                    </label>
                                </div>
                            </div>
                        </div>
                        <input type="text" id="tipoPessoa" hidden name="pessoa.TipoPessoa" value="F" class="form-control">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Email</div>
                                <input type="text" id="emailPessoa" name="pessoa.Email" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Telefone</div>
                                <input type="text" id="telefonePessoa" name="pessoa.Telefone" class="form-control">
                            </div>
                        </div>
                        <div class="form-group divsFisicas">
                            <div class="input-group">
                                <div class="input-group-addon">Nome</div>
                                <input type="text" id="nomePessoa" name="pessoa.NomeRazaoSocial" class="form-control inputsFisicos">
                            </div>
                        </div>
                        <div class="form-group divsFisicas">
                            <div class="input-group">
                                <div class="input-group-addon">CPF</div>
                                <input type="text" id="cpfPessoa" name="pessoa.CpfCnpj" class="form-control inputsFisicos">
                            </div>
                        </div>
                        <div class="form-group divsJuridicas" id="divRazaoSocialPessoa">
                            <div class="input-group">
                                <div class="input-group-addon">Razão Social</div>
                                <input type="text" id="razaoSocialPessoa" name="pessoa.NomeRazaoSocial" disabled class="form-control inputsJuridicos">
                            </div>
                        </div>
                        <div class="form-group divsJuridicas" id="divCNPJPessoa">
                            <div class="input-group">
                                <div class="input-group-addon">CNPJ</div>
                                <input type="text" id="cnpjPessoa" name="pessoa.CpfCnpj" disabled class="form-control inputsJuridicos">
                            </div>
                        </div>
                        <div class="form-group divsJuridicas" id="divInscricaoEstadualPessoa">
                            <div class="input-group">
                                <div class="input-group-addon">Inscrição Estadual</div>
                                <input type="text" id="inscricaoEstadualPessoa" name="pessoa.InscricaoEstadual" disabled class="form-control inputsJuridicos">
                            </div>
                        </div>
                        <div class="form-group divsJuridicas" id="divNomeFantasiaPessoa">
                            <div class="input-group">
                                <div class="input-group-addon">Nome Fantasia</div>
                                <input type="text" id="nomeFantasiaPessoa" name="pessoa.NomeFantasia" disabled class="form-control inputsJuridicos">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header">Etapa 2: Endereço</div>
                    <div class="card-body card-block">
                        <input type="text" id="pessoaEndereco" hidden name="pessoa.Endereco.PessoaId" class="form-control">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">CEP</div>
                                <input type="text" id="cepEndereco" name="pessoa.Endereco.Cep" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Logradouro</div>
                                <input type="text" id="logradouroEndereco" name="pessoa.Endereco.Logradouro" readonly class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Número</div>
                                <input type="text" id="numeroEndereco" name="pessoa.Endereco.Numero" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Complemento</div>
                                <input type="text" id="complementoEndereco" name="pessoa.Endereco.Complemento" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Bairro</div>
                                <input type="text" id="bairroEndereco" name="pessoa.Endereco.Bairro" readonly class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Cidade</div>
                                <input type="text" id="cidadeEndereco" name="pessoa.Endereco.Cidade" readonly class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Estado</div>
                                <input type="text" id="estadoEndereco" name="pessoa.Endereco.Estado" readonly class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Referência</div>
                                <input type="text" id="referenciaEndereco" name="pessoa.Endereco.Referencia" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card mt-2">
                    <div class="card-body card-block">
                        <div class="form-actions form-group text-center mb-0">
                            <button type="submit" class="btn btn-success rounded">
                                <i class="fa fa-check"></i> Cadastrar cliente
                            </button>
                            <button type="reset" class="btn btn-danger rounded">
                                <i class="fa fa-ban"></i> Limpar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!--/.col-->
</div>
<!--CONTEÚDO-->

@section scriptsCliente {
    <script src="~/Content/js/jquery.mask.js"></script>
    <script src="~/Content/js/vendor/jquery.form.min.js"></script>
    <script src="~/Content/js/modalFix.js"></script>
    <script src="~/Content/js/validation/jquery.validate.min.js"></script>
    <script src="~/Content/js/cliente/scriptsForms.js"></script>
}