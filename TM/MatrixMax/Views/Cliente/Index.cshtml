<!-- TÍTULO CONTEÚDO-->
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Clientes</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Novo cliente</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- TÍTULO CONTEÚDO-->
<!--CONTEÚDO-->
<div class="content mt-3">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">Etapa 1: Dados Pessoais</div>
                <div class="card-body card-block">
                    <div class="row text-center">
                        <div class="col">
                            <div class="btn-group btn-group-sm btn-group-toggle mb-2" data-toggle="buttons">
                                <label class="btn btn-secondary rounded-left text-center active">
                                    <input type="radio" name="radioPessoaFisica" id="radioPessoaFisica" checked> Pessoa física
                                </label>
                                <label class="btn btn-secondary rounded-right">
                                    <input type="radio" name="radioPessoaJuridica" id="radioPessoaJuridica"> Pessoa jurídica
                                </label>
                            </div>
                        </div>
                    </div>
                    <form action="" method="post" id="FormDadosPessoa" class="">
                        <input type="text" id="tipoPessoa" hidden name="pessoa.TipoPessoa" class="form-control">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Email</div>
                                <input type="text" id="emailPessoa" name="pessoa.Email" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Telefone</div>
                                <input type="text" id="telefonePessoa" name="pessoa.Telefone" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Nome</div>
                                <input type="text" id="nomePessoa" name="pessoa.NomeRazaoSocial" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group inputsJuridicos" id="divRazaoSocialPessoa">
                                <div class="input-group-addon">Razão Social</div>
                                <input type="text" id="razaoSocialPessoa" name="pessoa.NomeRazaoSocial" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">CPF</div>
                                <input type="text" id="cpfPessoa" name="pessoa.CpfCnpj" class="form-control">
                            </div>
                        </div>
                        <div class="form-group inputsJuridicos" id="divCNPJPessoa">
                            <div class="input-group">
                                <div class="input-group-addon">CNPJ</div>
                                <input type="text" id="cnpjPessoa" name="pessoa.CpfCnpj" class="form-control">
                            </div>
                        </div>
                        <div class="form-group inputsJuridicos" id="divInscricaoEstadualPessoa">
                            <div class="input-group">
                                <div class="input-group-addon">Inscrição Estadual</div>
                                <input type="text" id="inscricaoEstadualPessoa" name="pessoa.InscricaoEstadual" class="form-control">
                            </div>
                        </div>
                        <div class="form-group inputsJuridicos" id="divNomeFantasiaPessoa">
                            <div class="input-group">
                                <div class="input-group-addon">Nome Fantasia</div>
                                <input type="text" id="nomeFantasiaPessoa" name="pessoa.NomeFantasia" class="form-control">
                            </div>
                        </div>
                        <div class="form-actions form-group text-center">
                            <button type="submit" class="btn btn-success rounded">
                                <i class="fa fa-arrow-circle-right"></i> Avançar
                            </button>
                            <button type="reset" class="btn btn-danger rounded">
                                <i class="fa fa-ban"></i> Limpar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">Etapa 2: Endereço</div>
                <div class="card-body card-block">
                    <form action="" method="post" id="FormEnderecoPessoa" class="">
                        <input type="text" id="pessoaEndereco" hidden name="endereco.PessoaId" class="form-control">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">CEP</div>
                                <input type="email" id="cepEndereco" name="endereco.Cep" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Logradouro</div>
                                <input type="text" id="logradouroEndereco" name="endereco.Logradouro" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Número</div>
                                <input type="text" id="numeroEndereco" name="endereco.Numero" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Complemento</div>
                                <input type="text" id="complementoEndereco" name="endereco.Complemento" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Bairro</div>
                                <input type="text" id="bairroEndereco" name="endereco.Bairro" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Cidade</div>
                                <input type="text" id="cidadeEndereco" name="endereco.Cidade" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Estado</div>
                                <input type="text" id="estadoEndereco" name="endereco.Estado" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon">Referência</div>
                                <input type="text" id="referenciaEndereco" name="endereco.Referencia" class="form-control">
                            </div>
                        </div>
                        <div class="form-actions form-group text-center">
                            <button type="submit" class="btn btn-success rounded">
                                <i class="fa fa-check"></i> Cadastrar cliente
                            </button>
                            <button type="reset" class="btn btn-danger rounded">
                                <i class="fa fa-ban"></i> Limpar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--/.col-->
</div>
<!--CONTEÚDO-->

@section scriptsCliente {
    <script src="~/Content/js/jquery.mask.js"></script>
    <script src="~/Content/js/vendor/jquery.form.min.js"></script>
    <script src="~/Content/js/modalFix.js"></script>
    <script src="~/Content/js/validation/jquery.validate.min.js"></script>
    <script src="~/Content/js/cliente/scriptsForms.js"></script>
}