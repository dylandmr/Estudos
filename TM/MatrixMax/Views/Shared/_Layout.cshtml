<html class="no-js" lang="">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>MatrixMax - @ViewBag.Title</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="~/Content/Imagens/favicon.png">
    
    @Styles.Render("~/bundles/css")
    <!-- <link rel="stylesheet" href="assets/css/bootstrap-select.less"> -->

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->

</head>
<body>
    <!-- BARRA LATERAL -->
    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">

            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="/Home/Index"><img src="~/Content/Imagens/matrix.png" alt="Logo"></a>
            </div>

            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="/Home/Index"> <i class="menu-icon fa fa-dashboard"></i>Dashboard </a>
                    </li>
                    <h3 class="menu-title">PRODUTOS</h3><!-- /.menu-title -->
                    <li>
                        <a href="#"> <i class="menu-icon fa fa-truck"></i>Repor Estoque</a>
                    </li>
                    <li>
                        <a href="/Produto/Index"> <i class="menu-icon fa fa-list"></i>Gerenciar produtos</a>
                    </li>
                    <h3 class="menu-title">Vendas</h3><!-- /.menu-title -->

                    <li>
                        <a href="#"> <i class="menu-icon fa fa-money"></i>Nova Venda</a>
                    </li>
                    <li>
                        <a href="#"> <i class="menu-icon fa fa-calendar"></i>Histórico</a>
                    </li>

                    <h3 class="menu-title">Recargas</h3><!-- /.menu-title -->
                    <li>
                        <a href="#"> <i class="menu-icon fa fa-repeat"></i>Em Aberto</a>
                    </li>
                    <li>
                        <a href="#"> <i class="menu-icon fa fa-plus-square"></i>Registrar Nova</a>
                    </li>

                    <h3 class="menu-title">Clientes</h3><!-- /.menu-title -->
                    <li>
                        <a href="#"> <i class="menu-icon fa fa-plus-square"></i>Cadastrar cliente</a>
                    </li>
                    <li>
                        <a href="#"> <i class="menu-icon fa fa-users"></i>Atualizar dados</a>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
    </aside>
    <!-- BARRA LATERAL -->
    <!-- HEADER E CONTENT -->
    <div id="right-panel" class="right-panel">

        <!-- TOPO PÁGINA-->
        <header id="header" class="header">
            <div class="header-menu">
                <div class="col-sm-7">
                    <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                    <div class="header-left">
                        <button class="search-trigger"><i class="fa fa-search"></i></button>
                        <div class="form-inline">
                            <form class="search-form">
                                <input class="form-control mr-sm-2" type="text" placeholder="Pesquisar..." aria-label="Pesquisar">
                                <button class="search-close" type="submit"><i class="fa fa-close"></i></button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-sm-5">
                    <div class="user-area dropdown float-right">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img class="user-avatar rounded-circle" src="data:image;base64,@System.Convert.ToBase64String(usuarioLogado.ImagemDePerfil)" alt="User Avatar">
                        </a>

                        <div class="user-menu dropdown-menu">
                            <a class="nav-link" href="#"><i class="fa fa- user"></i>Perfil</a>

                            <a class="nav-link" href="/Login/Logout"><i class="fa fa-power -off"></i>Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- TOPO PÁGINA-->
        @RenderBody()
    </div>
    <!-- HEADER E CONTENT -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>

    @Scripts.Render("~/bundles/js")
</body>
</html>