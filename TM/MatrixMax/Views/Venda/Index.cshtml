                                <span class="switch-label"></span>
                                <span class="switch-handle"></span>
                            </label>
                            <div class="col-3">
                                <div class="row">
                                    <label class="containerRadio mr-2">
                                        Valor fixo
                                        <input type="radio" checked name="radioParcela" id="parceladoFixo">
                                        <span class="spanRadio"></span>
                                    </label>
                                    <label class="containerRadio">
                                        Porcentagem
                                        <input type="radio" name="radioParcela" id="parceladoPorcentagem">
                                        <span class="spanRadio"></span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-3">
                                <select id="parcelas" name="venda.Parcelas" class="ml-2 form-control">
                                    <option value="5">5%</option>
                                    <option value="10">10%</option>
                                    <option value="15">15%</option>
                                    <option value="20">20%</option>
                                    <option value="25">25%</option>
                                    <option value="30">30%</option>
                                </select>
                            </div>
                            <div class="col-4"><input type="text" class="form-control" placeholder="Valor..." /></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="venda.FormaDePagamento" class="pr-1  form-control-label">Cliente</label>
                        <select id="formaDePagamento" name="venda.FormaDePagamento" class="form-control">
