<!-- TÍTULO CONTEÚDO-->
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Vendas</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Histórico</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- TÍTULO CONTEÚDO-->
<!--CONTEÚDO-->
<div class="p-3 text-center">
    <div class="card">
        <div class="card-header">
            <h3>Histórico de Vendas</h3>
        </div>
        <div class="card-body pb-0">
            <div class="form-group mb-0">
                <div class="row text-center">
                    <div class="col w-50"></div>
                    <div class="col-3"><input type="text" id="filtroFuncionario" placeholder="Filtrar por funcionário" class="form-control" /></div>
                    <div class="input-group col-5">
                        <div class="input-group-addon">Filtrar por data</div>
                        <input id="filtroData" type="date" value="@DateTime.Now.ToString("yyyy'-'MM'-'dd")" class="form-control" />
                        <button class="btn btn-success rounded" id="botaoFiltroData">Buscar</button>
                    </div>
                    <div class="col-3"><input type="text" id="filtroCliente" placeholder="Filtrar por cliente" class="form-control" /></div>
                    <div class="col w-50"></div>
                </div>
            </div>
        </div>
        <div class="default-tab">
            <table id="bootstrap-data-table-Vendas" class="table-striped table table-dark table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Id</th>
                        <th>Data</th>
                        <th>Cliente</th>
                        <th>Funcionário</th>
                        <th>Forma de Pagamento</th>
                        <th>Desconto</th>
                        <th>Valor Total</th>
                        <th>Itens - Observações</th>
                        <th>Observações</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <!--/.col-->
        </div>
    </div>
</div>
</div>

<div class="modal fade" id="ModalDetalhes" tabindex="-1" role="dialog" aria-labelledby="largeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="largeModalLabel">Detalhes da venda</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table id="bootstrap-data-table-Detalhes" class="table-striped table table-dark text-center table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>Produto</th>
                            <th>Valor</th>
                            <th>Quantidade</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <hr />
                <h5 class="pb-2 display-5 text-center">Observação:</h5>
                <p id="observacaoVenda" class="text-center"></p>
            </div>
        </div>
    </div>
</div>
<!--CONTEÚDO-->
@section scriptsHistoricoVendas {
    @Scripts.Render("~/bundles/tables/js")
    <script src="~/Content/js/moment-with-locales.js"></script>
    <script src="~/Content/js/venda/scriptsDataTables.js"></script>
    <script src="~/Content/js/venda/scriptsHistorico.js"></script>
}
