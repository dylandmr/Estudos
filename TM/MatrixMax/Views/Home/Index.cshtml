@{ MatrixMax.Models.Usuario usuarioLogado = (MatrixMax.Models.Usuario)HttpContext.Current.Session["usuarioLogado"]; }
<!-- TÍTULO CONTEÚDO-->
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>MatrixMax Cartuchos</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">
                        Dashboard
                        @if (usuarioLogado.TipoUsuario == 'A')
                        {
                            @: Administrador
                        }
                    </li>
                </ol>
            </div>
        </div>
    </div>

</div>
<!-- TÍTULO CONTEÚDO-->
<!--CONTEÚDO-->
<div class="p-3 mt-3">
    @if (HttpContext.Current.Session["Alerta"] != null)
    {
        <div class="card-group">
            <div class="col-sm-7 mx-auto">
                <div class="alert  alert-success alert-dismissible fade show" role="alert">

                    <span class="badge badge-pill badge-success">logado</span> Bem vindo, @usuarioLogado.Pessoa.NomeRazaoSocial!
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
        HttpContext.Current.Session["Alerta"] = null;
    }

    @if (usuarioLogado.TipoUsuario == 'A')
    {
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-6 mx-auto">
                    <div class="card">
                        <div class="card-body">
                            <iframe class="chartjs-hidden-iframe" tabindex="-1" style="display: block; overflow: hidden; border: 0px; margin: 0px; top: 0px; left: 0px; bottom: 0px; right: 0px; height: 100%; width: 100%; position: absolute; pointer-events: none; z-index: -1;"></iframe>
                            <h4 class="mb-3">Arrecadação bruta mensal </h4>
                            <canvas id="barChart" width="473" height="236" style="display: block; width: 473px; height: 236px;"></canvas>
                        </div>
                    </div>
                </div><!-- /# column -->
            </div>
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="card">
                        <div class="card-body">
                            <iframe class="chartjs-hidden-iframe" tabindex="-1" style="display: block; overflow: hidden; border: 0px; margin: 0px; top: 0px; left: 0px; bottom: 0px; right: 0px; height: 100%; width: 100%; position: absolute; pointer-events: none; z-index: -1;"></iframe>
                            <h4 class="mb-3">Vendas por produto </h4>
                            <canvas id="pieChart" height="473" width="473" style="display: block; width: 473px; height: 473px;"></canvas>
                        </div>
                    </div>
                </div><!-- /# column -->

            </div>

        </div>
        @section scriptsRelatorios {
            <script src="~/Content/js/lib/chart-js/Chart.bundle.js"></script>
            <script src="~/Content/js/lib/chart-js/chartjs-init.js"></script>
        }
    }
    else
    {
        <h1>Soma Produtos @ViewBag.ProdutosVendidosDia</h1>
        <h1>Conta Vendas @ViewBag.ContaVendasDia</h1>
        <div class="card-group">
            <div class="col-lg-3 col-md-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="stat-widget-one">
                            <div class="stat-icon dib"><i class="ti-money text-success border-success"></i></div>
                            <div class="stat-content dib">
                                <div class="stat-text">Renda bruta do dia</div>
                                @{ double totalBrutoDia = ViewBag.TotalBrutoDia; }
                                <div class="stat-digit">R$ @totalBrutoDia.ToString("F2")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="card col-lg-2 col-md-6 no-padding no-shadow mx-auto">
                <div class="card-body bg-flat-color-4">
                    <div class="h1 text-muted text-right mb-4">
                        <i class="fa fa-warning text-light"></i>
                    </div>
                    <div class="h4 mb-0 text-light">
                        <span class="count">@ViewBag.ContaAlerta</span>
                    </div>
                    <small class="text-uppercase font-weight-bold text-light">Produtos com estoque em alerta</small>
                    <div class="progress progress-xs mt-3 mb-0 bg-light" style="width: 40%; height: 5px;"></div>
                </div>
            </div>
            <div class="card col-lg-2 col-md-6 no-padding no-shadow mx-auto">
                <div class="card-body bg-flat-color-5">
                    <div class="h1 text-muted text-right mb-4">
                        <i class="fa fa-user-plus text-light"></i>
                    </div>
                    <div class="h4 mb-0 text-light">
                        <span class="count">2</span>
                    </div>
                    <small class="text-uppercase font-weight-bold text-light">Novos clientes</small>
                    <div class="progress progress-xs mt-3 mb-0 bg-light" style="width: 40%; height: 5px;"></div>
                </div>
            </div>
        </div>
    }

    <!--/.col-->
</div>
<!--CONTEÚDO-->
