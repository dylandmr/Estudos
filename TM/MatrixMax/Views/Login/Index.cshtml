
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>MatrixMax - Login</title>
    <link rel="icon" href="~/Content/Imagens/favicon.png" />
    <link rel="stylesheet" href="~/Content/Css/estilo_login.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
</head>
<body>
    <form action="/Login/Autentica" method="post">
        <div class="login-box">
            <img src="~/Content/Imagens/matrixhorizon.png" />
            <h1>login</h1>
            @Html.ValidationMessage("CredenciaisIncorretas")
            <div class="textbox">
                <i class="fas fa-user"></i>
                <input type="text" placeholder="usuário" required autofocus name="login" />
            </div>

            <div class="textbox">
                <i class="fas fa-key"></i>
                <input type="password" placeholder="senha" required name="senha" />
            </div>

            <input class="btn" type="submit" value="entrar" />
        </div>
    </form>
</body>
</html>
